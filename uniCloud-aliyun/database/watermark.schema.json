{
	"bsonType": "object",
	"required": [],
	"permission": {
		"read": "auth.uid == doc.user_id",
		"create": true,
		"update": true,
		"delete": true
	},
	"properties": {
		"_id": {
			"description": "ID，系统自动生成"
		},
		"user_id": {
			"bsonType": "string",
			"foreignKey": "uni-id-users._id",
			"defaultValue": {
				"$env": "uid"
			}
		},
		"watermark_count": {
			"bsonType": "int",
			"description": "使用次数",
			"defaultValue": 10
		},
		"cumulative": {
			"bsonType": "int",
			"description": "总数数",
			"defaultValue": 0
		},
		"date": {
			"bsonType": "timestamp",
			"description": "签到的日期时间戳",
			"permission": {
				"write": false
			}
		},
		"create_date": {
			"bsonType": "timestamp",
			"description": "签到的时间戳",
			"forceDefaultValue": {
				"$env": "now"
			}
		},
		"ip": {
			"bsonType": "string",
			"forceDefaultValue": {
				"$env": "clientIP"
			}
		}
	},
	"version": "0.0.1"
}